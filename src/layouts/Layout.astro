  </head>
  <body
    class="bg-white dark:bg-black scrollbar-thin scrollbar-thumb-green-900 scrollbar-track-gray-800"
  >
    <AppHeader />
    <slot />
    <AppFooter />
    <style>
      html {
        font-family: monospace, sans-serif;
      }

      body {
        margin: 0;
      }
    </style>
  </body>
