---
import { add } from 'date-fns';
import Container from "./Container.astro";
import { Ticker } from './TimerComponents/Ticker';

const futureDate = add(new Date(), {
  days: 6,
  hours: 22,
  minutes: 40
});
---

<div>
    <Container>
      <div class="space-y-6 justify-between text-gray-600 md:flex flex-row-reverse md:gap-6 md:space-y-0 lg:gap-12 lg:items-center">
        <div class="md:5/12 lg:w-1/2">
          <Ticker client:load futureDate={futureDate} />
        </div>
        <div class="md:7/12 lg:w-1/2">
          <h2 class="text-3xl font-bold text-gray-900 md:text-4xl dark:text-white">
            Time is ticking! Register Now!
          </h2>
          <p class="my-8 text-gray-600 dark:text-green-300">
            Contestants can compete as a team in the competition and <br/> each team may have a minimum of ONE member and a maximum of FIVE members.  
          </p>
        </div>
      </div>
    </Container>
</div>